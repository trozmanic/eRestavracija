<link rel="stylesheet" href="stylesheets/menu.css">
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">OCENI JED</h5>
                <button type="button" class="button btn-close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id='rating-svg'>
                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-emoji-neutral" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                        <path fill-rule="evenodd" d="M4 10.5a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5z"/>
                        <path d="M7 6.5C7 7.328 6.552 8 6 8s-1-.672-1-1.5S5.448 5 6 5s1 .672 1 1.5zm4 0c0 .828-.448 1.5-1 1.5s-1-.672-1-1.5S9.448 5 10 5s1 .672 1 1.5z"/>
                    </svg>
                </div>
                <div id='rating-number'>
                    Ocena jedi: 3
                </div>
                <div class="slidecontainer">

                    <input type="range" min="1" max="5" value="3" class="slider" id="myRange" oninput="slider_change(this.value)" >
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="button btn-review" data-dismiss="modal">ZAPRI</button>
                <button type="button" class="button btn-review">POSLJI</button>
            </div>
        </div>
    </div>
</div>
<div class="menu-items">
    {{#each dynamicData.menu_items as | item |}}
    {{> myPartial ime= item.ime opis=item.opis cena=item.cena slika=item.slika id= item.id}}
    {{/each}}
</div>
