<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
<link rel="stylesheet" href="/stylesheets/nadzorna_plosca_main_style.css">
<link rel="stylesheet" href="/stylesheets/nadzorna_plosca_zaloga.css">

<!-- Narocila ZAČETEK-->
<!-- Button trigger modal -->

<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalLong" id="dodajNaorcilo">
    Launch demo modal
</button>

<div class="row">
    <div class="col-12 col-md-4">
        <h3 class="sredina-text text-white">Naročila</h3>

        {{#each narocila.vrsta as | item |}}
            {{> narociloItem id = item.id datum = item.datum sprejem_narocila = item.sprejem_narocila jedi=item.jedi miza=item.miza }}
        {{/each}}

    </div>
    <!-- Naročila KONEC-->
    <!-- Pripravljene jedi ZAČETEK-->
    <div class="col-12 col-md-4">
        <h3 class="sredina-text text-white">Pripravljene jedi</h3>

        {{#each narocila.pripravljena as | item |}}
            {{> narociloItemPripravljeno id = item.id datum = item.datum sprejem_narocila = item.sprejem_narocila konec_priprave=item.konec_priprave jedi=item.jedi miza=item.miza}}
        {{/each}}

    </div>
    <!-- Pripravljene jedi KONEC-->
    <!-- Postrežene jedi ZAČETEK-->
    <div class="col-12 col-md-4">
        <h3 class="sredina-text text-white">Postrežene jedi</h3>

        {{#each narocila.postrezena as | item |}}
            {{> narociloItemPostrezeno id = item.id datum = item.datum narocilo_postrezeno=item.narocilo_postrezeno jedi=item.jedi miza=item.miza }}
        {{/each}}

    </div>
    <!-- Postrežene jedi KONEC-->
</div>


<!-- Modal -->
<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
